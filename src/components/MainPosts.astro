  container: 'grid',
  mainArea: '',
  slideAreaA: '',
  slideAreaB: '',
  footerArea: ''
}
---

<section class={classes.container}>
    <div></div>
    <div></div>
    <div></div>
</section>

<style>
    .container {
        background-color: gray;
        width: 100%;
        height: 100%;
        min-width: 100vw;
        min-height: 100vh;
        display: grid;
        grid-gap: 1rem;
        gap: 1rem;
        grid-template-areas:
            'a a b b'
            'a a c c'
            'd d d d';
    }
</style>
