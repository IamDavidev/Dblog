---
import ButtonToggleTheme from './atoms/ButtonToggleTheme.astro'

interface Link {
  title: string
  url: string
}

const links: Link[] = [
  {
    title: 'Blog',
    url: '/blog'
  },
  {
    title: 'Projects',
    url: '/projects'
  },
  {
    title: 'About',
    url: '/about'
  },
  {
    title: 'Newsletter',
    url: '/newsletter'
  }
]

const classes = {
  container:
    'mb-7 md:mb-14 flex flex-row justify-between items-center text-[#111]',
  left: 'text-[#111]',
  right: {
    container: 'flex flex-row justify-between items-center gap-4',
    navbar: {
      container: 'flex flex-row justify-between items-center gap-4',
      item: ' text-[#111] hover:text-sky-600 text-xl'
    },
    toogle: ''
  }
}
---

<header class={classes.container}>
	<div class={classes.left}>David Lezama</div>
	<div class={classes.right.container}>
		<nav class={classes.right.navbar.container}>
			{
				links.map((link: Link) => {
					return (
						<a href={link.url} class={classes.right.navbar.item}>
							<span>{link.title}</span>
						</a>
					);
				})
			}
		</nav>
		<!-- o<button class='toggle-theme'>ðŸŒ‘</button> -->
    <ButtonToggleTheme client:visible />
	</div>
</header>
